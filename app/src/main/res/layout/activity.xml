<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.segundoauqui.mycalculator.MainActivity">



    <Button
        android:textSize="80dp"
        android:id="@+id/number1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="1"
        android:onClick="numberR"/>


    <Button
        android:textSize="80dp"
        android:layout_toRightOf="@id/number1"
        android:id="@+id/number2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="2" />

    <Button
        android:textSize="80dp"
        android:layout_toRightOf="@id/number2"
        android:id="@+id/number3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="3"/>

    <Button
        android:textSize="80dp"
        android:id="@+id/number4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/number3"
        android:text="4" />

    <Button
        android:textSize="80dp"
        android:layout_below="@id/number2"
        android:layout_toRightOf="@id/number4"
        android:id="@+id/number5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="5" />

    <Button
        android:textSize="80dp"
        android:layout_below="@id/number2"
        android:layout_toRightOf="@id/number5"
        android:id="@+id/number6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="6" />

    <Button
        android:textSize="80dp"
        android:layout_below="@id/number4"
        android:id="@+id/number7"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="7" />

    <Button
        android:textSize="80dp"
        android:layout_below="@id/number4"
        android:layout_toRightOf="@id/number7"
        android:id="@+id/number8"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="8" />

    <Button
        android:textSize="80dp"
        android:layout_below="@id/number6"
        android:layout_toRightOf="@id/number8"
        android:id="@+id/number9"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="9" />

    <Button
        android:textSize="80dp"
        android:layout_below="@id/number7"

        android:id="@+id/number0"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:text="0" />


    <Button
        android:id="@+id/numberS"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_toRightOf="@id/number3"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="calculate"
        android:text="+"
        android:textSize="80dp" />

    <Button
        android:id="@+id/numberR"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/numberS"
        android:layout_toRightOf="@id/number6"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="calculate"
        android:text="-"
        android:textSize="80dp" />

    <Button
        android:id="@+id/numberM"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/numberR"
        android:layout_toRightOf="@id/number6"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="calculate"
        android:text="x"
        android:textSize="80dp" />


    <Button
        android:id="@+id/numberD"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/numberM"
        android:layout_toRightOf="@id/number9"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="calculate"
        android:text="%"
        android:textSize="80dp" />


    <Button
        android:id="@+id/numberE"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:layout_below="@id/numberM"
        android:layout_toRightOf="@id/number8"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="calculate"
        android:text="="
        android:textSize="80dp" />

    <Button

        android:id="@+id/numberAC"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/number9"
        android:layout_toRightOf="@id/number0"
        android:onClick="clear"
        android:text="AC"
        android:textSize="80dp" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="390dp"
        android:layout_height="260dp"
        android:layout_below="@id/number0"
        android:text=""
        android:textSize="30dp"
        android:textColor="@color/colorAccent" />












</RelativeLayout>
